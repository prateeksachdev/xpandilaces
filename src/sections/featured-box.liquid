<section class="section featured-box">
  <div class="columns">
    {% for block in section.blocks %}
      {% if block.settings.enable_block %}
        <div class="column">
          <div class="item" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');">
            <h3>{{ block.settings.title }}</h3>

            <div class="foot">
              <a class="button" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Box",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "box",
      "name": "Box",
      "settings": [
        {
          "type":"checkbox",
          "id":"enable_block",
          "label":"Enable Box",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Box",
      "category": "Image"
    }
  ]
}
{% endschema %}