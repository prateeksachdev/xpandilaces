<hero-banner>
  <template #settings>
    <script type="application/json">
      {
        "blocks": [
          {% for block in section.blocks %}
            {{block.settings | json}}
            {%- unless forloop.last -%},{%- endunless -%}
          {% endfor %}
        ]
      }
    </script>
  </template>
</hero-banner>

{% schema %}
  {
    "name": "Hero Banner",
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "radio",
            "id": "type",
            "label": "Enable",
            "options": [
              { "value": "image", "label": "Image" },
              { "value": "video", "label": "Video" }
            ],
            "default":   "image"
          },
          {
           "type": "header",
           "content": "Image"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Mobile Image"
          },
          {
           "type": "header",
           "content": "Video"
          },
          {
            "type": "text",
            "id": "video_url",
            "label": "Video URL"
          },
          {
            "type": "image_picker",
            "id": "video_poster",
            "label": "Video Poster"
          },
          {
            "type": "url",
            "id": "mobile_link",
            "label": "Mobile Image Link"
          },
          {
           "type": "header",
           "content": "Desktop Image Overlay"
          },
          {
            "type": "select",
            "id": "overlay_position",
            "label": "Position",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default": "left"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "title_caption",
            "label": "Title Caption"
          },
          {
            "type": "text",
            "id": "primary_cta_text",
            "label": "Primary CTA Text"
          },
          {
            "type": "url",
            "id": "primary_cta_link",
            "label": "Primary CTA Link"
          },
          {
            "type": "color",
            "id": "primary_cta_text_color",
            "label": "Primary CTA Text Color",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "primary_cta_bg_color",
            "label": "Primary CTA Background Color",
            "default": "#008FFD"
          },
          {
            "type": "checkbox",
            "id": "enable_secondary_cta",
            "label": "Enable Secondary CTA"
          },
          {
            "type": "text",
            "id": "secondary_cta_text",
            "label": "Secondary CTA Text"
          },
          {
            "type": "url",
            "id": "secondary_cta_link",
            "label": "Secondary CTA Link"
          },
          {
            "type": "color",
            "id": "secondary_cta_text_color",
            "label": "Secondary CTA Text Color",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_cta_bg_color",
            "label": "Secondary CTA Background Color",
            "default": "#A6B4BE"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Banner",
        "category": "Image"
      }
    ]
  }
{% endschema %}