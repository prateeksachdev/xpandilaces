<three-item-banner style="{%- if section.settings.bg_color -%}background-color: {{section.settings.bg_color}};{%- endif -%}">
  <template #title>
    {% if section.settings.title != blank %}
      <h2>{{ section.settings.title }}</h2>
    {% endif %}
  </template>

  <template #slides>
    {% for block in section.blocks %}
      <swiper-slide>
        <div class="item">
          <img src="{{ block.settings.image | img_url: '100x' }}">
          {{ block.settings.text }}
        </div>
      </swiper-slide>
    {% endfor %}
  </template>

  <template #cta>
    {% if section.settings.cta_text != blank %}
      <p class="cta">
        <a class="button" href="{{ section.settings.cta_link }}" style="{%- if section.settings.cta_bg_color -%}background-color: {{section.settings.cta_bg_color}};border-color: {{section.settings.cta_bg_color}};{%- endif -%}{%- if section.settings.cta_text_color -%}color: {{section.settings.cta_text_color}};{%- endif -%}">
          {{ section.settings.cta_text}}
        </a>
      </p>
    {% endif %}
  </template>
</three-item-banner>

{% schema %}
  {
    "name": "Three Item Banner",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
      },
      {
        "type": "color",
        "id": "cta_text_color",
        "label": "CTA Text Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "cta_bg_color",
        "label": "CTA Background Color",
        "default": "#ff085a"
      }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Three Item Banner",
        "category": "Text"
      }
    ]
  }
{% endschema %}