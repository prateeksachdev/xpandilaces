<section class="section featured-products">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2>{{section.settings.title}}</h2>
    {% endif %}

    <div class="columns">
      {% for block in section.blocks %}
        {% if block.settings.enable_block %}
          {%- assign product = all_products[block.settings.product] -%}
          <div class="column is-half">
            <div class="product">
              <div class="info" style="color: {{ block.settings.font_color }};">
                <h3>{{ block.settings.title }}</h3>
                {{ block.settings.caption }}
              </div>

              <div>
                <img src="{{ block.settings.image | img_url: 'master' }}">
              </div>
              <div class="foot">
                <a href="{{ product.url }}?variant={{block.settings.variant_id}}">{{ block.settings.link_text }}</a>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.link_text != blank %}
      <p>
        <a class="button" href="{{ section.settings.link }}">
          {{ section.settings.link_text}}
        </a>
      </p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type":"checkbox",
          "id":"enable_block",
          "label":"Enable Product",
          "default": true
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "variant_id",
          "label": "Variant ID"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "color",
          "id": "font_color",
          "label": "Font Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "view product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Product"
    }
  ]
}
{% endschema %}